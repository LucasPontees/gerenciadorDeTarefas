<div class="home-header">
    {{#if search}}
    <h1>Você está buscando por: <span>{{search}}</span></h1>
    {{#if tasksQty }}
    <p>Foram encontradas <span>{{tasksQty}}</span> tarefa(s)</p>
    {{else}}
    <p>Nenhuma tarefa encontrado para o termo <span>{{search}}</span></p>
    {{/if}}
    {{else}}
    <h1>Veja outras <span>Tarefas</span>:</h1>
    {{/if}}
    <form action="/" method="GET">
        <input type="text" name="search" placeholder="Está buscando por algo?">
        <input type="submit" class="btn" value="Buscar">
    </form>
    <div class="order-container">
        <span>Ordenar por:</span>
        <form action="/" method="GET">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="new">
            <button type="submit"><i class="bi bi-arrow-up"></i> Mais novos</button>
        </form>
        <form action="/" method="GET">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="old">
            <button type="submit"><i class="bi bi-arrow-down"></i> Mais antigos</button>
        </form>
        <a href="/" class="clean-search">Limpar</a>
    </div>
</div>
<div class="tasks-container">
    {{#each tasks}}
    <div class="tought-card">
        <blockquote class="tought-title">{{this.title}}</blockquote>
        <p class="tought-description">{{this.description}}</p> <br>
        <figcaption class="tought-author">por <strong>{{this.User.name}}</strong></figcaption>
    </div>
    {{/each}}
</div>